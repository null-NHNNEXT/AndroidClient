<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/settingtop"
        android:padding="30dp"
        android:background="@drawable/topbackground"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 프로필 사진"
        android:id="@+id/my_profile_textview"
        android:gravity="center"
        android:typeface="normal"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="35dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profile_image"
            android:src="@drawable/default_profile"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:background="@drawable/topbackground"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="사진 바꾸기"
            android:id="@+id/profile_image_setting_textview"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#ff90ffb6"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            android:id="@+id/profile_image_setting_button"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="#00ffffff"
            android:textColor="#ff9eaeff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새글 알림 받기"
                android:id="@+id/push_setting_textview"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"
                android:textColor="#ffffa1b8"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes"
                android:id="@+id/push_setting_button"
                android:layout_margin="10dp"
                android:background="#00ffffff"
                android:textColor="#ff9eaeff"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
