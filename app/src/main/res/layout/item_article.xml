<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="title"
                android:id="@+id/article_list_title"
                android:layout_weight="1"
                android:textColor="#EB93C6"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="content"
                android:id="@+id/article_list_content"
                android:layout_weight="2"
                android:textColor="#ffffffff"
                android:textSize="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="writer"
                    android:id="@+id/article_list_writer"
                    android:layout_weight="2"
                    android:textColor="#C2E27F"
                    android:textSize="25dp"
                    android:gravity="clip_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="time"
                    android:id="@+id/article_list_timestamp"
                    android:layout_weight="3.5"
                    android:textColor="#4382B8"
                    android:textIsSelectable="false"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>