<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/article_list_top"
        android:background="@drawable/topbackground"
        android:src="@drawable/articlelisttop"
        android:padding="15dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/swipe"
        android:layout_weight="1">
         <ListView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="13dp"
               android:scrollbars="none"
               android:id="@+id/article_list_listview"
               android:background="#00ffffff"
               android:divider="#ffffffff"
               android:dividerHeight="1dp"
               android:layout_weight="1" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="새 글 쓰기"
            android:id="@+id/article_list_edit_button"
            android:layout_weight="1"
            android:background="@drawable/topbackground"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff"
            android:textSize="25sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="설정하기"
            android:id="@+id/article_list_setting_button"
            android:layout_weight="1"
            android:background="@drawable/topbackground"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>
