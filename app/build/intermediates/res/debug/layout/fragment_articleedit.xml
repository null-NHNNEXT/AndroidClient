<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/article_edit_top"
        android:background="@drawable/topbackground"
        android:src="@drawable/articleedittop"
        android:padding="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/article_edit_title"
        android:background="@drawable/topbackground"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:hint="제목"
        android:textColor="#ffffffff"
        android:textColorHint="#96ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/article_edit_content"
        android:background="@drawable/containerbackground"
        android:layout_weight="1"
        android:layout_margin="13dp"
        android:hint="본문"
        android:gravity="top|left"
        android:padding="13dp"
        android:textColor="#ffffffff"
        android:textColorHint="#96ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="사진 붙이기"
            android:id="@+id/article_edit_imagesetting_button"
            android:layout_weight="1"
            android:background="@drawable/topbackground"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffffff"
            android:textSize="25sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="완료"
            android:id="@+id/article_edit_save_button"
            android:layout_weight="1"
            android:background="@drawable/topbackground"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
